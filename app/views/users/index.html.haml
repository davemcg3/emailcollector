.container
  .row
    .col-xs-12
      %h1 Listing users

      .table-responsive
        %table.table.table-striped.table-hover.table-condensed
          %thead
            %tr
              %th Name
              %th Email
              %th Password digest
              %th Admin
              %th
              %th
              %th

          %tbody
            - @users.each do |user|
              %tr
                %td= user.name
                %td= user.email
                %td= user.password_digest
                %td= user.admin
                %td= link_to 'Show', user
                %td= link_to 'Edit', edit_user_path(user)
                %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }
