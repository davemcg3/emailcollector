.container
  .row
    .col-xs-12
      %h1 Listing Emails

      .table-responsive
        %table.table.table-striped.table-hover.table-condensed
          %thead
            %tr
              %th Email
              %th Status
              %th Source
              %th Description
              %th Unsubscribed
              %th{:colspan => "2"}
          %tbody
            - @emails.each do |email|
              %tr
                %td= email.email
                %td= email.status
                %td= email.source
                %td= email.description
                %td= email.unsubscribed
                %td= link_to 'Edit', edit_email_path(email)
                %td= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' }
